@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":DeleteCommandParser" as DeleteCommandParser LOGIC_COLOR
participant "d:DeleteCommand" as DeleteCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
end box

' Delete by name(s) (focused)
LogicManager -> AddressBookParser : parseCommand("delete n/John [n/Jane ...]")
AddressBookParser -> DeleteCommandParser : parse(name args)
DeleteCommandParser --> AddressBookParser : DeleteCommand(name or names)
AddressBookParser --> LogicManager : DeleteCommand

LogicManager -> DeleteCommand : execute(model)
alt single name
  DeleteCommand -> Model : find person by name
  Model --> DeleteCommand : person
  DeleteCommand -> Model : deletePerson(person)
  Model --> DeleteCommand : ok
  DeleteCommand --> LogicManager : CommandResult("Deleted Person")
else multiple names
  DeleteCommand -> Model : resolve all names -> persons
  Model --> DeleteCommand : persons
  DeleteCommand -> Model : delete each person
  Model --> DeleteCommand : ok
  DeleteCommand --> LogicManager : CommandResult("Deleted N persons")
end

@enduml
